<Page x:Class="Barb.ViewFolder.PageFolder.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Barb.ViewFolder.PageFolder"
      mc:Ignorable="d" 
      Style="{StaticResource MainPageStyle}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="\ContentFolder\ImageFolder\SK.png"/>
        </Grid.Background>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50 50 0 0">
            <TextBlock 
                Text="САЛОН КРАСОТЫ"
                FontSize="50"
                Foreground="#ff00ff"
                FontWeight="Bold" 
                FontStyle="Italic"/>
            <TextBlock 
                Margin="30 30 0 0"
                Text="ПЕРЕЗАГРУЗКА"
                FontSize="80"
                Foreground="#ff00ff"
                FontWeight="Bold" 
                TextDecorations="Underline" 
                FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</Page>
